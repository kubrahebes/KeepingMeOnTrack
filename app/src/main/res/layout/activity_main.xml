<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#83be2f"
    tools:context="com.example.user.keepingmeontrack.MainActivity">


    <ImageView
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_marginTop="65dp"
        android:src="@drawable/food"
        android:layout_centerHorizontal="true"
        android:id="@+id/image1"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FOOD"
        android:layout_marginTop="64dp"
        android:id="@+id/text1"
        android:textSize="41.4sp"
        android:textColor="#ffffff"
        android:letterSpacing="0.0"
        android:lineSpacingExtra="-6.9sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/image1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:layout_marginTop="13dp"
        android:text="Calculate Your Calories Taked"
        android:textSize="16.2sp"
        android:textColor="#ffffff"
        android:letterSpacing="0.0"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text1"/>
    <ImageView
        android:layout_width="4.5dp"
        android:layout_height="4.5dp"
        android:id="@+id/img2"
        android:layout_marginTop="41dp"
        android:src="@drawable/dot"
        android:layout_below="@id/text2"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:layout_width="17.5dp"
        android:layout_height="17.5dp"
        android:src="@drawable/more"
        android:layout_marginTop="35dp"
        android:layout_below="@id/text2"
        android:layout_toRightOf="@id/img2"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>
