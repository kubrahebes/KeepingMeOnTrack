<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/ic_logo"
        />

    <EditText
        android:inputType="textEmailAddress"
        android:id="@+id/login_username"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_edittext"
        android:layout_centerInParent="true"
        android:layout_below="@id/login_logo"
        android:padding="10dp"
        android:hint="Username"
        android:layout_marginTop="50dp"
        />
    <EditText
        android:padding="10dp"
        android:background="@drawable/rounded_edittext"
        android:layout_width="250dp"
        android:layout_height="40dp"

        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_username"
        android:layout_marginTop="20dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:id="@+id/login_password"
        />

    <Button
        android:id="@+id/login_button"
        android:fontFamily="sans-serif-medium"
        android:textSize="17.6sp"
        android:letterSpacing="0.01"
        android:textStyle="normal"
        android:textColor="#ffffff"
        android:text="login"
        android:background="@drawable/login_buttons"
        android:layout_width="161.5dp"
        android:layout_height="45.5dp"
        android:layout_below="@id/login_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/login_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_button"
        android:layout_alignStart="@+id/login_button"
        android:layout_below="@+id/login_button"
        android:layout_marginTop="32dp"
        android:clickable="true"
        android:text="Forgot password?" />

    <TextView
        android:id="@+id/login_forget_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/login_forgot"
        android:layout_alignBottom="@+id/login_forgot"
        android:layout_toEndOf="@+id/login_forgot"
        android:layout_toRightOf="@+id/login_forgot"
        android:paddingLeft="3dp"
        android:text="Here"
        android:textColor="@color/bluebutton" />

    <TextView
        android:id="@+id/noaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_button"
        android:layout_alignStart="@+id/login_button"
        android:layout_below="@+id/login_forgot"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="29dp"
        android:text="No account?" />

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/noaccount"
        android:layout_alignBottom="@+id/noaccount"
        android:layout_alignEnd="@+id/login_button"
        android:layout_alignRight="@+id/login_button"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:text="Register"
        android:onClick="b"
        android:clickable="true"
        android:textColor="@color/bluebutton" />
</RelativeLayout>